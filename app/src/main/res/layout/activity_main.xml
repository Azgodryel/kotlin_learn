<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/operation"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="110sp"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="60sp"
        android:singleLine="true"/>
    <LinearLayout
    android:layout_width="match_parent"
        android:orientation="vertical"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btn_AC"
                style="@style/Button_act"
                android:text="AC"
                android:theme="@style/Button_act" />

            <Button
                android:id="@+id/btn_lsc"
                style="@style/Button_act"
                android:text="("
                android:theme="@style/Button_act" />

            <Button
                android:id="@+id/btn_rsc"
                style="@style/Button_act"
                android:text=")"
                android:theme="@style/Button_act" />

            <Button
                android:id="@+id/btn_del"
                style="@style/Button_act"
                android:text="/"
                android:theme="@style/Button_act" />
        </LinearLayout><LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btn_7"
            style="@style/Button_number_act"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/Button_number_act"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/Button_number_act"
            android:text="9"/>

        <Button
            android:id="@+id/btn_umn"
            style="@style/Button_act"
            android:text="*"
            android:theme="@style/Button_act" />
    </LinearLayout><LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btn_4"
            style="@style/Button_number_act"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/Button_number_act"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/Button_number_act"
            android:text="6"/>

        <Button
            android:id="@+id/btn_sum"
            style="@style/Button_act"
            android:text="+"
            android:theme="@style/Button_act" />
    </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btn_1"
                style="@style/Button_number_act"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/Button_number_act"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/Button_number_act"
                android:text="3"
                android:theme="@style/Button_number_act" />

            <Button
                android:id="@+id/btn_min"
                style="@style/Button_act"
                android:text="-"
                android:theme="@style/Button_act" />
        </LinearLayout><LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btn_tch"
            style="@style/Button_number_act"
            android:text="." />

        <Button
            android:id="@+id/btn_0"
            style="@style/Button_number_act"
            android:text="0"/>

        <Button
            android:id="@+id/btn_back"
            style="@style/Button_number_act"
            android:text="BACK"/>

        <Button
            android:id="@+id/btn_ravno"
            style="@style/Button_act"
            android:text="="/>
    </LinearLayout>

        </LinearLayout>

</LinearLayout>



